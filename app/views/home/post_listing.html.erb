<% provide(:date, Time.now.to_s(:long)) %>

<div class="grid-container">
  <div class="grid-x grid-margin-x">
    <div class="cell medium-6 large-7">

      <h1>Posts</h1>

      <h3><%= yield(:date) %></h3>

      <table>
        <thead>
          <tr>
            <th>User name</th>
            <th>Body</th>
            <th>Exp-date</th>
            <th>Action - Seen</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.user.name %></td>
            <td><%= post.body %></td>
            <td><%= post.expiration.to_s(:long) %></td>
            <td>
              <%= form_for(@seen) do |f| %>
              <div class="field">
                <%= f.hidden_field :user_id, :value => current_user.id%>
                <%= f.hidden_field :post_id, :value => post.id%>
              </div>
              <div class="actions">
                <%= f.submit "Seen", class: "btn btn-primary" %>
                <% end %>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


